# TicketsAnalyzerAI - Environment Configuration
# Copy this file to .env and fill in your values

# ===============================
# OpenAI API (required for LLM)
# ===============================
OPENAI_API_KEY=sk-...

# ===============================
# YouTrack Configuration (for webhook service)
# ===============================
YT_BASE_URL=https://your-youtrack.myjetbrains.com
YT_TOKEN=perm:your-token-here

# Webhook secret (optional, for security)
WEBHOOK_SECRET=your-secret-key-here

# ===============================
# ChromaDB Configuration
# ===============================
CHROMA_DIR=./data/chroma
PERSIST_DIR=./data/chroma

# ===============================
# Retrieval Settings
# ===============================
TOP_K=5
MAX_DISTANCE=0.9
PER_PARENT_DISPLAY=1
PER_PARENT_PROMPT=3
STITCH_MAX_CHARS=1500
MEM_CAP=2

# ===============================
# Memory Collection (optional)
# ===============================
ENABLE_MEMORY=0
MEM_COLLECTION=memories

# ===============================
# Application Preferences
# ===============================
APP_PREFS_PATH=.app_prefs.json
